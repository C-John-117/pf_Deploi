<Window x:Class="GestionnaireLicences.View.ModifierLicenceWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Ajouter une Licence" Height="300" Width="400">
    <Grid Margin="10">
        <StackPanel>
            <TextBlock Text="Nom du Logiciel:" Margin="0,0,0,5"/>
            <TextBox Text="{Binding NouvelleLicence.NomLogiciel, UpdateSourceTrigger=PropertyChanged}" Margin="0,0,0,10"/>

            <TextBlock Text="Type de Licence:" Margin="0,0,0,5"/>
            <TextBox Text="{Binding NouvelleLicence.TypeLicence, UpdateSourceTrigger=PropertyChanged}" Margin="0,0,0,10"/>

            <TextBlock Text="Date d'Expiration:" Margin="0,0,0,5"/>
            <DatePicker SelectedDate="{Binding NouvelleLicence.DateExpiration}" Margin="0,0,0,10"/>

            <TextBlock Text="Nombre d'Utilisateurs:" Margin="0,0,0,5"/>
            <TextBox Text="{Binding NouvelleLicence.NombreUtilisateurs}" Margin="0,0,0,10"/>

            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                <Button Content="Modifier" Command="{Binding ModifierCommand}" Width="75" Margin="5" />
                <Button Content="Annuler" Click="BtnAnnuler_Click" Width="75" Margin="5"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>